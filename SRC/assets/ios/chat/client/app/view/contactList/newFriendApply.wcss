.newfriend-wrap{
    width:710px;
    margin-left: 20px;
    margin-top: 50px;
}
.attach-info-wrap{
    margin-left: 20px;
    margin-top: 30px;
    width: 710px;
    height: 221px;
    border-radius: 12px;
    background-color: rgba(255, 255, 255, 1);
    box-shadow: 0px 0px 2px 0px rgba(0, 0, 0, 0.2);
}
.title-wrap{
    width:690px;
    line-height: 50px;
    height: 71px;
    padding:10px 20px;
    margin:0 10px;
    border-bottom:solid #DBDBE5 1px;
    color: rgba(136, 136, 136, 1);
    font-size: 28px;
}
.detail-wrap{
    width:650px;
    margin:30px;  
    color: rgba(34, 34, 34, 1);
    font-size: 28px;
}
.agree-wrap{
    height:80px;
    margin: 40px 20px;
    display: flex;
}
.reject{
    display:inline-block;
    flex: 1;
    height:100%;
    line-height:80px;
    text-align:center;
    margin-right: 10px;
    border-radius: 6px;
    background-color: rgba(255, 255, 255, 1);
    color: rgba(34, 34, 34, 1);
    font-size: 32px;
    box-shadow: 0px 0px 2px 0px rgba(0, 0, 0, 0.2);
}
.agree{
    display:inline-block;
    flex: 1;
    height:100%;
    line-height:80px;
    text-align:center;
    border-radius: 6px;
    background-color: rgba(49, 141, 230, 1);
    color: rgba(255, 255, 255, 1);
    font-size: 32px;
}
.solved{
    margin: 40px 20px;
    height: 100px;
    background: rgb(204, 204, 204);
    color: #fff;
    font-size: 32px;
    text-align: center;
    line-height: 100px;
    border-radius: 12px;
}