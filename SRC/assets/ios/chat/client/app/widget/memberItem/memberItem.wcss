.member-info-wrap{
    position: relative;
    width: 24%;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 30px;
    min-width: 160px;
}
.avatar-wrap{
    width:100px;
    height:100px;
    border-radius:50%;
}
.text{  
    color: rgba(136, 136, 136, 1);
    font-size: 24px;
    margin-top:10px;
}
.badge{
    display:inline-block;
    width:25px;
    height:25px;
    border-radius:50%;
    position:absolute;
    top:30px;
    right:30px;
}